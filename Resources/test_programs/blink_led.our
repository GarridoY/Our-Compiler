Setup {
    clock t;
    int interval = 1000;
    bool scheduled = false;
    bool ledState = false;
    opin ledPin LED_BUILTIN;
}

Loop {
    if (!scheduled) {
        at (t == interval) {
            t = 0;

            // if the LED is off turn it on and vice-versa:
            ledState = !(ledState);
            ledPin = ledState;

            scheduled = false;
        }
        scheduled = true;
    }
}
