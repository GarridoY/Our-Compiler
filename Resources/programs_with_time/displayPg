#
# pit = point in time
#

Display{

   pit leetthursday 17-sep-1337;
   pit circleDay 19-sep-1200;
   pit squareTime 1300;
    
   Text leet = "1337";
   Figure Fig = Circle;
   Figure Fig2 = Square;
   
   leetthursday display leet
      wait 1 min;
      clear;
   
   circleDay display Fig
      wait 1 hour;
      display Fig2;

}
